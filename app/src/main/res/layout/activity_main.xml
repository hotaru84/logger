<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.chip.Chip
        android:id="@+id/elapsed_time"
        style="@style/whiteChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#FFFFFF"
        android:clickable="false"
        android:text="10.0 hour"
        android:textColor="@android:color/darker_gray"
        app:chipIcon="@drawable/ic_history_black_24dp"
        app:chipIconTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textStartPadding="0dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/date_pick"
        style="@style/OutlineChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-05-11"
        app:chipStartPadding="8dp"
        app:chipIcon="@drawable/ic_date_range_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toStartOf="@+id/enable_sw"
        app:layout_constraintStart_toEndOf="@+id/elapsed_time"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.chip.Chip
        style="@style/OutlineChip"
        android:id="@+id/enable_sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:chipEndPadding="2dp"
        app:chipIcon="@drawable/ic_settings_black_24dp"
        app:iconStartPadding="6dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/elapsed_time"
        app:textEndPadding="0dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_menu" />

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elapsed_time"
        app:navGraph="@navigation/mobile_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>